# Application
APP_NAME=Reimbursement Validation System
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database - DocumentDB (PostgreSQL-based with MongoDB API)
DATABASE_URL=postgresql://user:password@localhost:5432/reimbursement_db
MONGODB_URI=mongodb://user:password@localhost:27017/reimbursement_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis - Task Queue & Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# Google AI - Gemini
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=2048

# Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=reimbursement-documents
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# OCR Settings
OCR_ENGINE=paddleocr
OCR_LANG=en
OCR_CONFIDENCE_THRESHOLD=0.8

# Authentication - Keycloak
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=reimbursement
KEYCLOAK_CLIENT_ID=reimbursement-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Email/Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@company.com

# External Integrations (Future)
HRMS_ENABLED=False
HRMS_API_URL=
HRMS_API_KEY=
HRMS_FALLBACK_TO_LOCAL=True

KRONOS_ENABLED=False
KRONOS_API_URL=
KRONOS_API_KEY=
KRONOS_FALLBACK_TO_LOCAL=True

PAYROLL_ENABLED=False
PAYROLL_API_URL=
PAYROLL_API_KEY=

# Feature Flags
ENABLE_AUTO_APPROVAL=True
AUTO_APPROVAL_CONFIDENCE_THRESHOLD=0.95
ENABLE_OCR=True
ENABLE_AI_VALIDATION=True
ENABLE_LEARNING_AGENT=True

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/var/log/reimbursement/app.log

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOW_CREDENTIALS=True

# Tenant Configuration
MULTI_TENANT_ENABLED=False
DEFAULT_TENANT_ID=default-tenant

# File Upload
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls
