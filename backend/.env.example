# Application
APP_NAME=Reimbursement Validation System
APP_ENV=development
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production

# Database - DocumentDB (PostgreSQL-based with MongoDB API)
DATABASE_URL=postgresql://user:password@localhost:5432/reimbursement_db
MONGODB_URI=mongodb://user:password@localhost:27017/reimbursement_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis - Task Queue & Cache
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_URL=redis://localhost:6379/1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_TASK_ALWAYS_EAGER=False

# ==============================================================================
# MULTI-VENDOR PROVIDER CONFIGURATION
# ==============================================================================
# Choose which cloud/service provider to use for each capability

# Storage Provider: gcs | azure | aws | local
STORAGE_PROVIDER=gcs

# LLM Provider: gemini | openai | azure_openai | anthropic | bedrock | ollama
LLM_PROVIDER=gemini

# Vision/OCR Provider: google-vision | azure-vision | textract | tesseract
VISION_PROVIDER=tesseract

# ==============================================================================
# GOOGLE CLOUD CONFIGURATION
# ==============================================================================

# Google AI - Gemini
GOOGLE_API_KEY=your-google-api-key
GEMINI_MODEL=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.7
GEMINI_MAX_TOKENS=5000

# Google Cloud Storage
GCP_PROJECT_ID=your-gcp-project-id
GCP_BUCKET_NAME=reimbursement-documents
GCP_CREDENTIALS_PATH=/path/to/credentials.json

# ==============================================================================
# AZURE CONFIGURATION
# ==============================================================================

# Azure Storage
AZURE_STORAGE_CONNECTION_STRING=
AZURE_STORAGE_ACCOUNT_NAME=
AZURE_STORAGE_ACCOUNT_KEY=
AZURE_STORAGE_CONTAINER=documents

# Azure OpenAI
AZURE_OPENAI_API_KEY=
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4-deployment
AZURE_OPENAI_API_VERSION=2024-02-15-preview
AZURE_OPENAI_TEMPERATURE=0.7
AZURE_OPENAI_MAX_TOKENS=4096

# Azure Computer Vision
AZURE_VISION_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_VISION_API_KEY=

# ==============================================================================
# AWS CONFIGURATION
# ==============================================================================

# AWS Credentials (leave empty to use IAM roles/environment)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# AWS S3 Storage
AWS_S3_BUCKET=your-bucket-name

# AWS Bedrock LLM
BEDROCK_MODEL_ID=anthropic.claude-3-sonnet-20240229-v1:0
BEDROCK_TEMPERATURE=0.7
BEDROCK_MAX_TOKENS=4096

# ==============================================================================
# OPENAI CONFIGURATION
# ==============================================================================

OPENAI_API_KEY=
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
OPENAI_MAX_TOKENS=4096
OPENAI_ORGANIZATION=

# ==============================================================================
# ANTHROPIC CONFIGURATION
# ==============================================================================

ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
ANTHROPIC_TEMPERATURE=0.7
ANTHROPIC_MAX_TOKENS=4096

# ==============================================================================
# OLLAMA (LOCAL LLM) CONFIGURATION
# ==============================================================================

OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_TEMPERATURE=0.7
OLLAMA_MAX_TOKENS=4096

# ==============================================================================
# OCR CONFIGURATION
# ==============================================================================

# Local storage path for development
LOCAL_STORAGE_PATH=./uploads

# Tesseract OCR Settings
TESSERACT_LANG=eng
TESSERACT_CMD=

# OCR Settings
OCR_ENGINE=tesseract
OCR_LANG=en
OCR_CONFIDENCE_THRESHOLD=0.8
OCR_LLM_FALLBACK_THRESHOLD=0.9
OCR_USE_LLM_FALLBACK=True

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================

# Keycloak
KEYCLOAK_SERVER_URL=http://localhost:8080
KEYCLOAK_REALM=reimbursement
KEYCLOAK_CLIENT_ID=reimbursement-api
KEYCLOAK_CLIENT_SECRET=your-client-secret

# JWT Settings
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# EMAIL & NOTIFICATIONS
# ==============================================================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@company.com
SMTP_PASSWORD=your-email-password
SMTP_FROM=noreply@company.com

# ==============================================================================
# EXTERNAL INTEGRATIONS (Future)
# ==============================================================================

HRMS_ENABLED=False
HRMS_API_URL=
HRMS_API_KEY=
HRMS_FALLBACK_TO_LOCAL=True

KRONOS_ENABLED=False
KRONOS_API_URL=
KRONOS_API_KEY=
KRONOS_FALLBACK_TO_LOCAL=True

PAYROLL_ENABLED=False
PAYROLL_API_URL=
PAYROLL_API_KEY=

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================

ENABLE_AUTO_APPROVAL=True
AUTO_APPROVAL_CONFIDENCE_THRESHOLD=0.95
ENABLE_OCR=True
ENABLE_AI_VALIDATION=True
ENABLE_LEARNING_AGENT=True

# ==============================================================================
# RATE LIMITING & LOGGING
# ==============================================================================

RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

LOG_LEVEL=INFO
LOG_FILE=/var/log/reimbursement/app.log

# ==============================================================================
# CORS & TENANT CONFIGURATION
# ==============================================================================

CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080,http://127.0.0.1:8080
CORS_ALLOW_CREDENTIALS=True

MULTI_TENANT_ENABLED=False
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001

# ==============================================================================
# FILE UPLOAD
# ==============================================================================

MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS=pdf,jpg,jpeg,png,xlsx,xls
LOCAL_FILE_RETENTION_DAYS=30
